<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:layout_weight="1"
    >

    <TextView
        android:id="@+id/inOutTv"
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:background="@color/black"
        android:gravity="end|bottom"
        android:padding="13dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="70sp">

    </TextView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn7"

            android:layout_width="0dp"
            android:layout_height="110dp"
android:padding="10dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
android:backgroundTint="@color/darkLiver"
            android:onClick="onDigit"
            android:textSize="36sp"
            android:text="7" />

        <Button
            android:id="@+id/btn8"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="36sp"
            android:backgroundTint="@color/darkLiver"      android:onClick="onDigit"
            android:text="8" />
        <Button
            android:layout_margin="2dp"

            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/darkLiver"
            android:textSize="36sp"
            android:onClick="onDigit"
            android:layout_weight="1"
            android:text="9"
            />


        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:textSize="45sp"
            android:backgroundTint="@color/vividGamboge"
            android:onClick="onOperator"
            android:layout_weight="1"
            android:text="x" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn4"

            android:layout_width="0dp"
            android:layout_height="110dp"
            android:padding="10dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/darkLiver"
            android:onClick="onDigit"
            android:textSize="36sp"
            android:text="4" />

        <Button
            android:id="@+id/btn5"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="36sp"
            android:backgroundTint="@color/darkLiver"      android:onClick="onDigit"
            android:text="5" />
        <Button
            android:layout_margin="2dp"

            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/darkLiver"
            android:textSize="36sp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:text="6"
            />

        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:textSize="55sp"
            android:backgroundTint="@color/vividGamboge"
            android:onClick="onOperator"
            android:layout_weight="1"
            android:text="-" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn1"

            android:layout_width="0dp"
            android:layout_height="110dp"
            android:padding="10dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/darkLiver"
            android:onClick="onDigit"
            android:textSize="36sp"
            android:text="1" />

        <Button
            android:id="@+id/btn2"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="36sp"
            android:backgroundTint="@color/darkLiver"      android:onClick="onDigit"
            android:text="2" />
        <Button
            android:layout_margin="2dp"

            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/darkLiver"
            android:textSize="36sp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:text="3"
            />

        <Button
            android:id="@+id/btnAdd"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:textSize="45sp"
            android:backgroundTint="@color/vividGamboge"
            android:onClick="onOperator"
            android:layout_weight="1"
            android:text="+" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn0"

            android:layout_width="0dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:backgroundTint="@color/darkLiver"
            android:onClick="onDigit"
            android:textSize="36sp"
            android:text="0" />

        <Button
            android:id="@+id/btnDot"

            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="36sp"
            android:backgroundTint="@color/darkLiver"      android:onClick="onDecimalPoint"
            android:text="." />


        <Button
            android:id="@+id/btnResult"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/vividGamboge"
            android:onClick="onEqual"

            android:text="="
            android:textSize="40sp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnClear"

            android:layout_width="0dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:layout_margin="2dp"
            android:layout_weight="3"
            android:backgroundTint="@color/lightGrey"
            android:onClick="onClear"
            android:textSize="36sp"
            android:text="AC" />
        <Button
            android:id="@+id/btnDivide"

            android:layout_width="0dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/vividGamboge"
            android:onClick="onOperator"
            android:textSize="36sp"
            android:text="/" />


    </LinearLayout>


</LinearLayout>